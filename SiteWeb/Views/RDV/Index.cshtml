<style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .form-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
    <title>Cabinet Dentaire - Gestion des Patients</title>

<body>

<div class="container mt-5">
    <h2 class="mb-4">Liste des RDV</h2>

    <!-- Tableau Grid Bootstrap -->
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Patient</th>
                    <th scope="col">Date RDV</th>
                    <th scope="col">Etat du RDV</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>2</td>
                    <td>21/12/24 14:34</td>
                    <td>Confirmé</td>
                    <td>
                        <!-- Boutons CRUD -->
                        <button type="button" class="btn btn-primary btn-sm mx-1">Modifier</button>
                        <button type="button" class="btn btn-danger btn-sm mx-1">Supprimer</button>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

    <!-- Bouton Ajouter -->
    <div class="d-flex justify-content-end mb-4">
        <button type="button" class="btn btn-success mx-2" data-bs-toggle="modal" data-bs-target="#ajouterRDVModal">
            Ajouter
        </button>
    </div>

    <!-- Modal d'ajout de patient -->
    <div class="modal fade" id="ajouterRDVModal" tabindex="-1" aria-labelledby="ajouterRDVModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ajouterRDVModalLabel">Enregistrer un RDV</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulaire d'ajout de patient -->
                    <form>
                    <div class="mb-3">
                        <label for="id" class="form-label">ID</label>
                        <input type="text" class="form-control" id="id" placeholder="Entrez le numero RDV">
                    </div>
                     <div class="mb-3">
                        <label for="patient" class="form-label">Patient</label>
                        <!-- test-->
                        <select class="form-select" id="patient">
                            <option value="patient1">pat1</option>
                            <option value="patient2">pat2</option>
                        </select>
                    </div>
                   
                    <div class="mb-3">
                        <label for="rdv" class="form-label">Date RDV</label>
                        <input type="datetime" class="form-control" id="rdv" placeholder="Entrez La date du rendez-vous">
                    </div>
                    <div class="mb-3">
                            <label for="etat" class="form-label">Etat</label>
                            <div id="etat" class="form-check d-flex justify-content-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio"  name="confirmation" value="confirmé">
                                    <label class="form-check-label" for="confirme" style="margin-right:10px">Confirmé</label>
                                </div>
                                <div class="form-check">
                                        <input class="form-check-input" type="radio" name="confirmation" value="en attente">
                                    <label class="form-check-label" for="enAttente" style="margin-right:10px">En Attente</label>
                                </div>
                            </div>
                    
                    <br /><br />
                    <hr />
                    <div class="text-center">
                         <button type="submit" class="btn  btn-success btn-lg">Enregistrer Rendez-vous</button>
                    </div>
                </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
