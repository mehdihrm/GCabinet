@model UserViewModel
<div class="container mt-5">
    <form asp-controller="User" asp-action="ModifUser" method="post">
        <div class="mb-3">
            <input type="hidden" asp-for="@Model.newUser.Id" />
            <label for="username" class="form-label">Nom d'utilisateur'</label>
            <input asp-for="@Model.newUser.Username" required type="text" class="form-control" id="username" placeholder="Entrez le nouveau Username ">
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="@Model.newUser.email" required type="email" class="form-control" id="Email" placeholder="Entrez le nouveau email">
        </div>
        <div class="mb-3">
            <label for="pass" class="form-label">Nouveau mot de passe</label>
            <input asp-for="@Model.newUser.Password"  type="password" class="form-control" id="pass" placeholder="Entrez le nouveau mot de passe ou laisser vide">
        </div>
       
        <br />
        <br />
        <hr />
        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg">Modifier</button>
            <button class="btn btn-dark btn-lg" asp-controller="User" asp-action="Index">Annuler</button>
            <button asp-controller="User" asp-action="SupprimerUser" class="btn btn-danger btn-lg" onclick="return confirm('Voulez-vous vraiment supprimer ?')">Supprimer</button>
            
        </div>
    </form>

</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var inputElement = document.getElementById("pass");
        inputElement.value = "";
    });
</script>

