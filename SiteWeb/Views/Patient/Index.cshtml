<style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .form-container {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
    <title>Cabinet Dentaire - Gestion des Patients</title>

<body>

<div class="container mt-5">
    <h2 class="mb-4">Liste des Patients</h2>

    <!-- Tableau Grid Bootstrap -->
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Âge</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Smith</td>
                    <td>John</td>
                    <td>30</td>
                    <td>
                        <!-- Boutons CRUD -->
                        <button type="button" class="btn btn-primary btn-sm mx-1">Modifier</button>
                        <button type="button" class="btn btn-danger btn-sm mx-1">Supprimer</button>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

    <!-- Bouton Ajouter -->
    <div class="d-flex justify-content-end mb-4">
        <button type="button" class="btn btn-success mx-2" data-bs-toggle="modal" data-bs-target="#ajouterPatientModal">
            Ajouter
        </button>
    </div>

    <!-- Modal d'ajout de patient -->
    <div class="modal fade" id="ajouterPatientModal" tabindex="-1" aria-labelledby="ajouterPatientModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ajouterPatientModalLabel">Enregistrer un Patient</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulaire d'ajout de patient -->
                    <form>
                        <div class="mb-3">
                            <label for="id" class="form-label">CIN</label>
                            <input type="text" class="form-control" id="id" placeholder="Entrez la CIN du Patient">
                        </div>
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="nom" placeholder="Entrez le nom">
                        </div>
                        <div class="mb-3">
                            <label for="prenom" class="form-label">Prénom</label>
                            <input type="text" class="form-control" id="prenom" placeholder="Entrez le prénom">
                        </div>
                        <div class="mb-3">
                            <label for="rdv" class="form-label">Date RDV</label>
                            <input type="date" class="form-control" id="rdv" placeholder="Entrez La date du rendez-vous">
                        </div>
                        <div class="mb-3">
                            <label for="ville" class="form-label">Ville</label>
                            <select class="form-select" id="ville">
                                <option value="casa">Casablanca</option>
                                <option value="tanger">Tanger</option>
                                <option value="marrakech">Marrakech</option>
                                <option value="rabat">Rabat</option>
                                <option value="agadir">Agadir</option>
                                <option value="fes">Fes</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="adresse" class="form-label">Adresse</label>
                            <textarea class="form-control" id="adresse" rows="3" placeholder="Entrez l'adresse"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="Mutuelle" class="form-label">Mutuelle</label>
                            <div id="Mutuelle" class="form-check d-flex justify-content-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="mutuelleOui">
                                    <label class="form-check-label" for="mutuelleOui" style="margin-right:10px">Oui</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="mutuelleNon" >
                                    <label class="form-check-label" for="mutuelleNon" style="margin-right:10px">Non</label>
                                </div>
                            </div>
                        </div>
                        <br /><br />
                        <hr />
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg">Enregistrer un Patient</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
